@using Microsoft.AspNetCore.Identity
@using betriebsmittelverwaltung.Areas.Identity.Data
@model AWE_Projekt.Models.ConstructionSite

@{
    ViewData["Title"] = "Anpassen";
}
@inject UserManager<User> UserManager;
<h3>Baustellenverwaltung</h3>
<h4>@ViewData["Title"]</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @{
                var user = await UserManager.GetUserAsync(User);
            }
            
            <div class="form-group">
                <label asp-for="Manager" class="control-label"></label>
                <input readonly asp-for="Manager" value="@user.ForeName @user.LastName" class="form-control" />
                <span asp-validation-for="Manager" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sichern" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-default">Zurück zur Liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
