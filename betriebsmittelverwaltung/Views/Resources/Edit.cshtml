@model AWE_Projekt.Models.Resource

@{
    ViewData["Title"] = "Edit";
}

<h3>Bestandsverwaltung</h3>
<h4>Anpassen</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyDate" class="control-label"></label>
                <input asp-for="BuyDate" class="form-control" />
                <span asp-validation-for="BuyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="@Html.GetEnumSelectList<AWE_Projekt.Models.ResourceType>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceInterval" class="control-label"></label>
                <select asp-for="MaintenanceInterval" asp-items="@Html.GetEnumSelectList<AWE_Projekt.Models.MaintenanceInterval>()" class="form-control"></select>
                    <span asp-validation-for="MaintenanceInterval" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Sichern" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-default">Zurück zur Liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
