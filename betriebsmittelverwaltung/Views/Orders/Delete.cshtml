@model AWE_Projekt.Models.Order

@{
    ViewData["Title"] = "Löschen";
}

<h3>Auftragsverwaltung</h3>
<h4>@ViewData["Title"]</h4>

<hr />
<h3>Sind Sie sicher, dass Sie dies löschen möchten?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CheckOut)
        </dt>
        @{
            if (Model.OrderStatus == AWE_Projekt.Models.OrderStatus.Erledigt)
            {
                <dd>
                    @Html.DisplayFor(model => model.CheckOut)
                </dd>
            }
            else
            {
                <dd>
                    -
                </dd>
            }
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Löschen" onclick="return confirm('Sind Sie sicher?')" class="btn btn-danger" /> |
        <a asp-action="Index">Zurück zur Liste</a>
    </form>
</div>
