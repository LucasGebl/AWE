@using Microsoft.AspNetCore.Identity
@using betriebsmittelverwaltung.Areas.Identity.Data
@model betriebsmittelverwaltung.Areas.Identity.Data.User

@{
    ViewData["Title"] = "Löschen";
}
@inject UserManager<User> UserManager;

<h4>@ViewData["Title"]</h4>
<h3>Sind Sie sicher, dass Sie den Nutzer löschen möchten?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Vorname
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ForeName)
        </dd>

        <dt>
            Nachname
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            Rolle(n)
        </dt>
        <dd>
            @{
                var roles = await UserManager.GetRolesAsync(Model);
                foreach (var r in roles)
                {
                    @r
                }
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Löschen" class="btn btn-default" /> |
        <a asp-action="Index">Zurück zur Liste</a>
    </form>
</div>