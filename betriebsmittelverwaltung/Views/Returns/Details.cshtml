@model AWE_Projekt.Models.Return

@{
    ViewData["Title"] = "Details";
}
<h3>Retourenverwaltung</h3>
<h4>@ViewData["Title"]</h4>

<hr />
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CheckIn)
        </dt>
        @{
            if (Model.ReturnStatus == AWE_Projekt.Models.ReturnStatus.bestätigt)
            {
                <dd>
                    @Html.DisplayFor(model => model.CheckIn)
                </dd>
            }
            else
            {
                <dd>
                    -
                </dd>
            }
        }

        <dt>
            @Html.DisplayNameFor(model => model.ReturnStatus)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReturnStatus)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Creator.ForeName)  @Html.DisplayFor(model => model.Creator.LastName)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-default">Zurück zur Liste</a>
</div>
